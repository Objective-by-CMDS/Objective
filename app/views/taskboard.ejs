<!DOCTYPE html>
<html lang="en">
<head>
	<title>Objective | Your Tasks</title>
	
	<meta charset="UTF-8">
	
	<meta name="apple-mobile-web-app-capable" content="yes">
	
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	
	<meta http-equiv="X-UA-Compatible" content="chrome=1">
	
	<link rel="stylesheet" href="assets/styles/css/normalize.css">
	
	<link rel="stylesheet" href="assets/styles/css/taskboard.css">

</head>
<body>
	<header>
		<div class="container cf">
		<div class="branding">
			<img class="objlogo" src="assets/images/ObjectiveLogo.svg">
		</div>
		<div class="user">
			<img class="userpic" src="http://graph.facebook.com/<%=facebookId%>/picture?type=small">
			<p class="username"><%= firstName %></p>
			<span class="arrow-down"></span>
		</div>
	</header>
	<main class="tasklist">
		<div class="tasklistcontainer cf">

		<% tasks.forEach(function(task, i){ %>
		<div class="taskitem cf">
			<div class="itemimage">
				<img src="assets/images/Userpic.png">
			</div>
			<div class="iteminfo">
				<h1><%= task['name']%></h1>
				<p><%= task['notes']%></p>
			</div>
		</div>
		<%})%>
		</div>
	</main>

	<script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
	<script src="assets/scripts/libs/handlebars-1.1.2.js"></script>
	<script src="assets/scripts/libs/ember-1.1.2.js"></script>
	<script src="assets/scripts/app.js"></script>
	<script src="assets/scripts/models/todo.js"></script>
	<script src="assets/scripts/views/application.js"></script>
	<script src="assets/scripts/views/application.js"></script>
	<script src="assets/scripts/router.js"></script>
	<script src="assets/scripts/ajax_helpers.js"></script>
</body>